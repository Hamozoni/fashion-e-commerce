generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model order {
  id              String       @id
  status          order_status @default(pendding)
  pricePaidInCent Int
  createdAt       DateTime     @default(now())
  updatedAt       DateTime    @updatedAt
  userId          String
  auther user @relation(fields: [userId],references: [id])
  products product[]
  totalPaid Int
}

model product {
  id               String   @id @default(uuid())
  name             String
  createdAt        DateTime @default(now())
  updateddAt       DateTime  @updatedAt
  priceInCent      Int
  offerPriceInCent Int?     @default(0)
  isOffer          Boolean?  @default(false)
  isAvailable      Boolean  @default(true)
  description      String   @db.Text
  count            Int      @default(1)
  category         String
  subCategory      String
  aboutThisItem    String   @db.Text
  serialNumber     String
  selectedSize     String?
  selectedColor    String?
  sizes productsizes[]
  images productimages[]
  specifications specifications[]
  reviews reviews[]
  orders order[]
}

model productimages {
  id        String @id
  color     String
  productId String
  product product @relation(fields: [productId],references: [id])
  images imagespath[]
}
model imagespath {
  id              String @id
  imagePath       String
  productImagesId String
  prductImage productimages @relation(fields: [productImagesId],references: [id])

}

model productsizes {
  id          String  @id
  name        String
  description String?
  productId   String
   product product @relation(fields: [productId],references: [id])

}

model reviews {
  id        String @id
  text      String
  productId String
  autherId  String
  rating    Int    @default(7)
  product product @relation(fields: [productId],references: [id])
  auther  user @relation(fields: [autherId],references: [id])

}

model specifications {
  id        String @id
  key       String
  value     String
  productId String
  product    product @relation(fields: [productId],references: [id]) 
}

model user {
  id         String    @id
  createdAt  DateTime  @default(now())
  uptatedAt  DateTime  @updatedAt
  email      String    @unique()
  userName   String?
  avatarPath String?
  role       user_role @default(USER)
  reviews reviews[]
  orders order[]
}

enum order_status {
  pendding
}

enum user_role {
  USER
  ADMIN
}
