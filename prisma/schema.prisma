model verificationToken {
  id         String @id @default(uuid())
  email      String
  token      String @unique
  expires    DateTime
 
  @@unique([email, token])
}

model resetPasswordToken {
  id         String @id @default(uuid())
  email      String
  token      String @unique
  expires    DateTime
 
  @@unique([email, token])
}
 
